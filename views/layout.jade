doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
  body
    div(class="container")
      header
        h1= title
        - if (user)
          p(align='right')= user.name
          p(align='right')= user.email
    div(class="container")
      div(class="row")
        div(class="col-md-2")
          ul(class="nav nav-pills nav-stacked")
            - if (user)
              li
                form(action="/search", method="get") 
                  input(type="text", name="keyword", placeholder="SEARCH", class="search")
              li(class=(title === 'Home' ? 'active' : ''))
                a(title='Home', href='/') HOME
              li(class=(title === 'Archive' ? 'active' : ''))
                a(title="Archive", href='/archive') ARCHIVE
              li(class=(title === 'Tags' ? 'active' : ''))
                a(title="Tags", href="/tags") TAGS
              li(class=(title === 'Post' ? 'active' : ''))
                a(title='Post', href='/post') POST
              li(class=(title === 'Upload' ? 'active' : ''))
                a(title='Upload', href='/upload') UPLOAD
              li
                a(title='LOGOUT' href='/logout') LOGOUT
            - else
              li(class=(title === 'Home' ? 'active' : ''))
                a(title='Home', href='/') HOME
              li(class=(title === 'Login' ? 'active' : ''))
                a(title='Login', href='/login') LOGIN
              li(class=(title === 'Register' ? 'active' : ''))
                a(title='Register', href='/reg') REGISTER  
        dvi(class="col-md-1")
        div(class="col-md-6")
          body
            - if (success)
              div(class="flash")= success

            - if (error)
              div(class="flash")= error
            artical
              block content
        