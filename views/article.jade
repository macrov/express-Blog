extends layout

block content
  p
    span
      a(class="edit", href="/edit/#{post.name}/#{post.time.day}/#{post.title}") EDIT
    span
      a(class="edit", href="/remove/#{post.name}/#{post.time.day}/#{post.title}") DELETE
  p(class='info')
    |Author:
    a(href="/u/#{post.name}") #{post.name}
    |<br />
    |Date:
    #{post.time.minute}
    |<br />
    - if (post.tags)
    |Tags
    - each tag in post.tags
      - if (tag)
        a(class="tag", href="/tags/#{tag}") #{tag}
  p
    !{post.post}
  p(class="info") <#{post.pv}/#{post.comments.length}>

  include ./comment.jade